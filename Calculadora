    private void jButton16ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        this.numero1=Float.parseFloat(this.Boton.getText());
        this.operacion ="*";
        this.Boton.setText("");
    }                                         

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.numero2=Float.parseFloat(this.Boton.getText());
        switch(this.operacion){//bloque switch para el igual
            case "+":
                this.Boton.setText(nocero(this.numero1+this.numero2));
                break;
            case "-":
                this.Boton.setText(nocero(this.numero1-this.numero2));
                break;
            case "*":
                this.Boton.setText(nocero(this.numero1*this.numero2));
                break;
            case "/":
                if(this.numero2 ==0){
                    this.Boton.setText("no es posible dividir entre cero");
                    
                }
                else{
                            this.Boton.setText(nocero(this.numero1/this.numero2));
                break;
                }
                  
                
                
        
    }
    }                                        

